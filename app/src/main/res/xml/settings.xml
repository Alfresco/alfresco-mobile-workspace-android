<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.alfresco.content.app.widget.AccountPreference
        android:icon="@drawable/ic_account"
        android:key="@string/settings_account_key"
        android:layout="@layout/layout_pref_account"
        android:summary=""
        android:title=""
        app:allowDividerBelow="true" />

    <ListPreference
        android:defaultValue="@string/settings_theme_system"
        android:entries="@array/settings_theme_labels"
        android:entryValues="@array/settings_theme_values"
        android:icon="@drawable/ic_theme"
        android:key="@string/settings_theme_key"
        android:title="@string/settings_theme"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"
        app:useSimpleSummaryProvider="true"
        android:layout="@layout/layout_pref"/>

    <Preference
        app:allowDividerAbove="true"
        android:key="@string/settings_version_key"
        android:summary="App Version: 1.00"
        android:layout="@layout/layout_pref_text"/>

</androidx.preference.PreferenceScreen>
