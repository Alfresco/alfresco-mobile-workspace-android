<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_share_extension"
    app:startDestination="@id/nav_move">

    <fragment
        android:id="@+id/nav_move"
        android:name="com.alfresco.content.move.MoveFragment"
        android:label="">

        <argument
            android:name="id"
            app:argType="string" />

        <argument
            android:name="title"
            app:argType="string" />

        <argument
            android:name="path"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/nav_browse_sub_folders"
        android:name="com.alfresco.content.move.BrowseMoveFragment"
        android:label="{title}">

        <argument
            android:name="path"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue=""/>

        <deepLink app:uri="alfresco://content/browse_child/{path}/remote/{id}?title={title}" />

    </fragment>

    <fragment
        android:id="@+id/nav_browse_move"
        android:name="com.alfresco.content.move.BrowseMoveFragment"
        android:label="{title}">

        <argument
            android:name="path"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue=""/>

        <deepLink app:uri="alfresco://content/browse_move_parent/{path}/remote/{id}?title={title}" />

    </fragment>

    <fragment
        android:id="@+id/contextualSearchFragment"
        android:name="com.alfresco.content.search.SearchFragment"
        android:label="SearchFragment">
        <argument
            android:name="id"
            app:argType="string" />

        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue=""/>

        <argument
            android:name="extension"
            app:argType="boolean"
            android:defaultValue="false"/>

        <deepLink app:uri="alfresco://content/search/folder/{id}/{extension}?title={title}" />
    </fragment>

</navigation>
