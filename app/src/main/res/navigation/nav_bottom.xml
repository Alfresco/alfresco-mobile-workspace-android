<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_bottom"
    app:startDestination="@id/nav_recents">

    <fragment
        android:id="@+id/nav_recents"
        android:name="com.alfresco.content.browse.BrowseFragment"
        android:label="@string/nav_title_recents">
        <argument
            android:name="path"
            android:defaultValue="recents"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.alfresco.content.browse.FavoritesFragment"
        android:label="@string/nav_title_favorites">
    </fragment>

    <fragment
        android:id="@+id/nav_offline"
        android:name="com.alfresco.content.browse.offline.OfflineFragment"
        android:label="@string/nav_title_offline" />

    <fragment
        android:id="@+id/nav_offline_browse"
        android:name="com.alfresco.content.browse.offline.OfflineFragment"
        android:label="{title}">
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="title"
            android:defaultValue=""
            app:argType="string" />
        <deepLink app:uri="alfresco://offline/folder/{id}?title={title}" />
    </fragment>

    <fragment
        android:id="@+id/nav_browse"
        android:name="com.alfresco.content.browse.menu.BrowseMenuFragment"
        android:label="@string/nav_title_browse" />

    <activity
        android:id="@+id/nav_settings"
        android:name="com.alfresco.content.app.activity.SettingsActivity"
        android:label="@string/nav_title_settings" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.alfresco.content.search.SearchFragment"
        android:label="SearchFragment" />
    <action
        android:id="@+id/enter_search"
        app:destination="@id/searchFragment" />

    <fragment
        android:id="@+id/contextualSearchFragment"
        android:name="com.alfresco.content.search.SearchFragment"
        android:label="SearchFragment">
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue=""/>
        <deepLink app:uri="alfresco://content/{path}/{id}/search?title={title}" />
    </fragment>

    <fragment
        android:id="@+id/nav_folder"
        android:name="com.alfresco.content.browse.BrowseFragment"
        android:label="{title}">
        <argument
            android:name="path"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue=""/>
        <deepLink app:uri="alfresco://content/{path}/{id}?title={title}" />
        <deepLink app:uri="alfresco://content/{path}?title={title}" />
    </fragment>

    <activity
        android:id="@+id/nav_viewer"
        android:name="com.alfresco.content.viewer.ViewerActivity"
        android:label="{title}">
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="type"
            app:argType="string" />
        <deepLink app:uri="alfresco://content/{path}/{id}/preview?title={title}&amp;type={type}" />
    </activity>
</navigation>
