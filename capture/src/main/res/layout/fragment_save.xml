<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_separator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/capture_layout_margin">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/preview"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/capture_photo_preview_alt"
                        android:maxHeight="280dp"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/video_duration"
                        style="@style/Widget.Alfresco.Camera.Mode.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/capture_button_size"
                        android:layout_gravity="bottom|start"
                        android:layout_margin="@dimen/capture_layout_small_margin"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/capture_button_padding"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/delete_photo_button"
                        style="@style/Widget.Alfresco.Camera.Button"
                        android:layout_width="@dimen/capture_button_size"
                        android:layout_height="@dimen/capture_button_size"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="@dimen/capture_layout_small_margin"
                        android:background="@drawable/bg_camera_btn"
                        android:contentDescription="@string/capture_delete_photo_alt"
                        android:src="@drawable/ic_photo_delete"
                        android:visibility="gone" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/capture_layout_margin"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/file_name_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/capture_file_name_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/file_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/capture_layout_margin"
                    android:hint="@string/capture_description_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/description_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_button"
                    style="@style/Widget.Alfresco.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/capture_layout_margin_button"
                    android:layout_marginBottom="@dimen/capture_layout_margin"
                    android:text="@string/capture_save_button" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
