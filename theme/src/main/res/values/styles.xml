<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />

    <style name="Widget.Alfresco" />

    <style name="Widget.Alfresco.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Widget.Alfresco.ActionBar.Dark" parent="@style/Widget.MaterialComponents.ActionBar.Surface">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="background">?android:attr/colorBackground</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Alfresco.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Alfresco.Dark</item>
    </style>

    <style name="Widget.Alfresco.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Alfresco.Dark</item>
        <item name="tabTextAppearance">?attr/textAppearanceButton</item>
        <item name="android:background">@drawable/bottom_separator</item>
    </style>

    <style name="Widget.Alfresco.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="layout">@layout/alfresco_search_view</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.Alfresco.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/alfresco_chip_stroke_color</item>
        <item name="chipBackgroundColor">@color/alfresco_chip_background_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    </style>

    <style name="Widget.Alfresco.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Alfresco.BottomComponent</item>
    </style>

    <!-- TextInputFields -->

    <style name="Widget.Alfresco.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="Widget.Alfresco.TextInputEditText">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Alfresco.Button.Primary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.Alfresco.Button.Secondary" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="Widget.Alfresco.Action.Primary" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.Alfresco.Action.Secondary" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Alfresco.Dark</item>
    </style>

    <!-- Progress Indicators -->
    <style name="Widget.Alfresco.LinearProgressIndicator"
        parent="@style/Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackThickness">2dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Widget.Alfresco.CircularProgressIndicator"
        parent="@style/Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorSize">16dp</item>
        <item name="trackThickness">2dp</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>
