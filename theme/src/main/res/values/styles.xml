<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Alfresco" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/alfresco_status_bar_color</item>
        <item name="colorAccent">@color/alfresco_primary</item>
         <item name="android:textColorPrimary">@color/alfresco_text_primary</item>
         <item name="android:textColorSecondary">@color/alfresco_text_secondary</item>

        <!-- Action bar -->
        <item name="actionBarSize">44dp</item>

        <!-- Status bar -->
        <item name="android:windowLightStatusBar">@bool/alfresco_light_status_bar</item>
    </style>

    <style name="Theme.Alfresco.Splash">
        <item name="android:windowBackground">@drawable/bg_alfresco_splash</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Alfresco" />

    <!-- Buttons -->
    <style name="Widget.Alfresco.Button.Primary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/base_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Alfresco.Button.Secondary" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/base_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/alfresco_primary_dark</item>
    </style>

    <style name="Widget.Alfresco.Action.Primary" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/base_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/alfresco_primary_dark</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Alfresco.Action.Secondary" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/base_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/alfresco_secondary</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">@color/alfresco_secondary_ripple</item>
    </style>

    <style name="Widget.Alfresco.Button.Icon" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">44dp</item>
    </style>

    <!-- TextViews -->
    <style name="Widget.Alfresco.LogoText">
        <item name="android:fontFamily">@font/base_light</item>
        <item name="android:textColor">@color/alfresco_text_secondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="Widget.Alfresco.BodyText">
        <!--        <item name="android:textColor">#000000</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/base_regular</item>
    </style>

    <style name="Widget.Alfresco.SectionText">
        <item name="android:textColor">@color/selector_alfresco_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/base_regular</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Widget.Alfresco.FooterText">
        <item name="android:textColor">#AFAFAF</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/base_light</item>
    </style>

    <style name="Widget.Alfresco.ListItem" />

    <style name="Widget.Alfresco.ListItem.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/base_regular</item>
    </style>

    <style name="Widget.Alfresco.ListItem.SubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/base_regular</item>
    </style>

    <!-- TextInputFields -->
    <style name="Widget.Alfresco.TextField" />

    <style name="Widget.Alfresco.TextField.Layout">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="endIconDrawable">@drawable/ic_clear_mini</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="Widget.Alfresco.PasswordField" />

    <style name="Widget.Alfresco.PasswordField.Layout">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="Widget.Alfresco.TextField.Edit">
        <item name="android:paddingLeft">0dp</item> <!-- removes implicit indentation -->
        <item name="android:paddingBottom">4dp</item> <!-- distance to underline -->
        <item name="android:layout_height">54dp</item>
        <item name="android:fontFamily">@font/base_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#505050</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- ActionBar-->
    <style name="Theme.Alfresco.ActionBar">
        <item name="android:tint">@color/alfresco_primary_dark</item>
        <item name="android:fontFamily">@font/base_medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Widget.Alfresco.ActionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="android:itemTextAppearance">@android:color/black</item>
    </style>

    <!-- SnackBar -->
    <style name="Widget.Alfresco.Snackbar" />

    <style name="Widget.Alfresco.Snackbar.Title">
        <item name="android:fontFamily">@font/base_bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Alfresco.Snackbar.Message">
        <item name="android:fontFamily">@font/base_regular</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
