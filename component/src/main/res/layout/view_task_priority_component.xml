<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/componentParent"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_priority_low"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_priority_reset"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:paddingBottom="6dp"
        android:text="@string/priority_low"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/colorGray1"
        app:layout_constraintEnd_toStartOf="@id/tv_priority_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/tv_priority_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_priority_reset"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:textSize="14sp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:text="@string/priority_medium"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/colorGray1"
        app:layout_constraintEnd_toStartOf="@id/tv_priority_high"
        app:layout_constraintStart_toEndOf="@id/tv_priority_low"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/tv_priority_high"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_priority_reset"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:paddingBottom="6dp"
        android:text="@string/priority_high"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/colorGray1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_priority_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
